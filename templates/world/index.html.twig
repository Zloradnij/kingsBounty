{% extends 'base.html.twig' %}

{% block title %}World index{% endblock %}

{% block body %}
    <h1>World index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>Geo</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for world in worlds %}
            <tr>
                <td>{{ world.id }}</td>
                <td>{{ world.name }}</td>
                <td>{{ world.position }}</td>
                <td>{{ world.geo }}</td>
                <td>{{ world.createdAt ? world.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ world.updatedAt ? world.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_world_show', {'id': world.id}) }}">show</a>
                    <a href="{{ path('app_world_edit', {'id': world.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_world_new') }}">Create new</a>
{% endblock %}
