{% extends 'base.html.twig' %}

{% block title %}World{% endblock %}

{% block body %}
    <h1>World</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ world.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ world.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ world.position }}</td>
            </tr>
            <tr>
                <th>Geo</th>
                <td>{{ world.geo }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ world.createdAt ? world.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ world.updatedAt ? world.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_world_index') }}">back to list</a>

    <a href="{{ path('app_world_edit', {'id': world.id}) }}">edit</a>

    {{ include('world/_delete_form.html.twig') }}
{% endblock %}
